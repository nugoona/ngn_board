# docker/Dockerfile-29cm-best
FROM python:3.11-slim

# 작업 디렉토리
WORKDIR /app

# 공통 requirements
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# ✅ 29CM BEST 수집 스크립트만 복사
COPY ./tools/29cm_best/test_29cm_best_local.py /app/test_29cm_best_local.py

# (선택) 로그 즉시 출력
ENV PYTHONUNBUFFERED=1

# 실행
ENTRYPOINT ["sh", "-c", "python /app/test_29cm_best_local.py"]
