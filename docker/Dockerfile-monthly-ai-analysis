# Python 3.11 slim 버전 사용
FROM python:3.11-slim

# 작업 디렉토리 설정
WORKDIR /app

# 의존성 파일 복사 및 설치
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# 프로젝트 관련 파일 복사
COPY ./tools/ai_report_test/ai_analyst.py /app/ai_analyst.py
COPY ./tools/ai_report_test/system_prompt_v44.txt /app/system_prompt_v44.txt
COPY ./tools/ai_report_test/jobs/monthly_ai_analysis_job.py /app/monthly_ai_analysis_job.py

# 환경변수 설정
ENV PYTHONUNBUFFERED=1

# 실행 명령어 설정
ENTRYPOINT ["python", "/app/monthly_ai_analysis_job.py"]

