# ✅ Python 3.11 slim 버전 사용
FROM python:3.11-slim

# ✅ 작업 디렉토리 설정
WORKDIR /app

# ✅ 필수 패키지 설치
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# ✅ 프로젝트 관련 파일 복사
COPY ./ngn_wep/GA4_API/ga4_traffic_today.py /app/ga4_traffic_today.py
COPY ./config/ngn.env /app/ngn.env
COPY ./config/service-account.json /app/service-account.json

# ✅ 환경변수 설정 (어제 모드)
ENV GOOGLE_APPLICATION_CREDENTIALS="/app/service-account.json"
ENV RUN_MODE="yesterday"

# ✅ 실행 명령어 설정 (같은 스크립트지만 RUN_MODE가 yesterday이므로 "어제" 수집)
ENTRYPOINT ["python", "/app/ga4_traffic_today.py"]
