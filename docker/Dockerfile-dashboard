# File: docker/Dockerfile-dashboard  ★전체★

FROM python:3.9-slim

# 1. 시스템 패키지
RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc g++ libffi-dev ca-certificates && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 2. Python 의존성
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# 3. 애플리케이션 소스 & 설정
COPY ngn_wep /app/ngn_wep
COPY config/service-account.json /app/service-account.json
COPY config/ngn.env            /app/config/ngn.env

# 4. 환경 변수
ENV GOOGLE_APPLICATION_CREDENTIALS="/app/service-account.json"
ENV FLASK_ENV="production"
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH="/app:/app/ngn_wep/dashboard"

EXPOSE 8080

# 5. Gunicorn 실행 (timeout 120s, log-level info)
CMD exec gunicorn \
    -w 2 \
    --threads 4 \
    --timeout 120 \
    --log-level info \
    --bind 0.0.0.0:8080 \
    ngn_wep.dashboard.app:app
